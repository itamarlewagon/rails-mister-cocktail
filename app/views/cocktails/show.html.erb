<div class="banner">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<h2>Doses for this cocktail</h2>
<ol>
  <% @cocktail.doses.each do |dose| %>
    <li><%= "#{dose.description} / #{dose.ingredient.name}" %></li>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }, class: 'card-remove-link' do %>
        <i class="fas fa-trash"></i>
        <% end %>
  <% end %>
</ol>
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'Back', cocktails_path %>